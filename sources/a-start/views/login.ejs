<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
  <link href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css" rel="stylesheet">
  <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <style>
    * {
      margin: 0;
      padding: 0;
    }

    .mdc-select,
    .mdc-text-field {
      margin-top: 8px;
      margin-bottom: 8px;
    }
    
    form {
      margin: 0em 1em 1em 1em;
    }

    form>div {
      margin-top: 8px;
      margin-bottom: 8px;
    }

    form>div>label {
      width: 30em;
    }

    form>div>button {
      width: 34.5em;
    }
  </style>
</head>

<body>
  <header class="mdc-top-app-bar">
    <div class="mdc-top-app-bar__row">
      <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
        <span class="mdc-top-app-bar__title">Login</span>
      </section>
    </div>
  </header>

  <div class="mdc-top-app-bar--fixed-adjust">

    <form method="POST" action="/login">
      <div>
        <label class="mdc-text-field mdc-text-field--filled username">
          <span class="mdc-text-field__ripple"></span>
          <input type="text" class="mdc-text-field__input" aria-labelledby="username-label" name="user_name" id="user_name">
          <span class="mdc-floating-label" id="username-label">Username</span>
          <span class="mdc-line-ripple"></span>
        </label>
      </div>

      <div>
        <label class="mdc-text-field mdc-text-field--filled password">
          <span class="mdc-text-field__ripple"></span>
          <input type="password" class="mdc-text-field__input" aria-labelledby="password-label" name="user_pass" id="user_pass">
          <span class="mdc-floating-label" id="password-label">Password</span>
          <span class="mdc-line-ripple"></span>
        </label>
      </div>

      <div>
        <button class="mdc-button mdc-button--raised" style="height: 4em;">
          <div class="mdc-button__ripple"></div>
          <i class="material-icons mdc-button__icon" aria-hidden="true">info</i>
          <span class="mdc-button__label">Login</span>
        </button>
      </div>

    </form>

    <% if(Boolean(errorLogin) === true) { %> 
      <div style="color: red;">
        Something's wrong with your credential, please recheck !
      </div>
    <% } %>

  </div>


  <script language="javascript">
    const MDCTopAppBar = mdc.topAppBar.MDCTopAppBar;
    const MDCRipple = mdc.ripple.MDCRipple;
    const MDCTextField = mdc.textField.MDCTextField;

    const topAppBarElement = document.querySelector('.mdc-top-app-bar');
    const topAppBar = new MDCTopAppBar(topAppBarElement);

    const textFieldElement = document.querySelectorAll('.mdc-text-field');
    textFieldElement.forEach(e => new MDCTextField(e));

    const buttonElement = document.querySelectorAll('.mdc-button');
    buttonElement.forEach(e => new MDCRipple(e));
  </script>
</body>

</html>